{
  "name": "pizza-shop",
  "version": "1.0.0",
  "license": "MIT",
  "description": "A JavaScript full stack application for a pizza shop (School project)",
  "homepage": "https://github.com/nowtryz/PizzaShop#readme",
  "keywords": [
    "Pizza",
    "FullStack",
    "Polytech",
    "Annecy",
    "Polytech"
  ],
  "main": "src/index.js",
  "scripts": {
    "install": "node ./bin/copy-env.js",
    "start": "node dist/index.js",
    "build": "tsc",
    "dev:start": "nodemon --exec ts-node src/index.js",
    "test": "jest ./tests",
    "test:watch": "jest --watchAll",
    "test:integretion": "jest ./tests/it"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nowtryz/PizzaShop.git"
  },
  "bugs": {
    "url": "https://github.com/nowtryz/PizzaShop/issues"
  },
  "contributors": [
    {
      "name": "Damien Djomby (Nowtryz)",
      "url": "https://nowtryz.net"
    },
    {
      "name": "Adrien Simard (adrien-simard)"
    }
  ],
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest/presets/js-with-ts"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "chalk": "^4.1.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.4",
    "mongoose": "^5.10.5",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@jest/globals": "^26.4.2",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.2",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
